<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".screen.Login_Screen">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/book"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phương Nam Lib"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#AE000000"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/in_User">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Đăng Nhập"
            android:textSize="18dp"
            android:id="@+id/ed_txtUser"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/in_Pass">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật Khẩu"
            android:textSize="18dp"
            android:inputType="textPassword"
            android:id="@+id/ed_txtPass"/>
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/chkSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Lưu Mật Khẩu"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="Đăng Nhập"
            android:textStyle="bold"
            android:textSize="18dp"
            android:backgroundTint="#FFC107"
            android:id="@+id/btn_LogIn"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:textSize="18dp"
            android:textStyle="bold"
            android:backgroundTint="#8A55646A"
            android:id="@+id/btn_Cancel"/>
    </LinearLayout>
</LinearLayout>